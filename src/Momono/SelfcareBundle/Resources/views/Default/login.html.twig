{% block panel_body %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
    {{ form_start(form, {'method': 'POST', 'class':'flowup', 'role':'form', 'action': path('selfcare_user_login_check')}) }}
        <fieldset>
            <div class="form-group">
                {{ form_label(form.username, 'E-mail') }}
                {{ form_widget(form.username) }}
            </div>
	    <div class="form-group">
                {{ form_label(form.password, 'Password') }}
                {{ form_widget(form.password) }}
            </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/admin" />
        #}
            <div class="checkbox">
                <label>
                    {{ form_widget(form.rememberme) }} Remember Me
                </label>
            </div>
            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
        </fieldset>
    {{ form_end(form) }}
{% endblock %}
